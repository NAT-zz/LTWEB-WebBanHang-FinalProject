		<div class="row margin-bottom-40">
			<!-- BEGIN SALE PRODUCT -->
			<div class="col-md-12 sale-product">
				<c:choose>
					<c:when test="${brand != null }">
						<h2>${brand.bName}</h2>
					</c:when>
					<c:otherwise>
						<h2>Tất cả</h2>
